@model IEnumerable<Desafio_API_MVC.Models.TodoTask>

@{
    ViewData["Title"] = "Tarefas";
}

<h2>Tarefas</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Nova Tarefa</a>
    <a class="btn btn-primary" asp-action="GetById">Procurar Por Id</a>
    <a class="btn btn-primary" asp-action="GetByTitle">Procurar Por TÃ­tulo</a>
    <a class="btn btn-primary" asp-action="GetByDate">Procurar Por Data</a>
    <a class="btn btn-primary" asp-action="GetByStatus">Procurar Por Status</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(model => item.Id)</th>
                <th>@Html.DisplayFor(model => item.Title)</th>
                <th>@Html.DisplayFor(model => item.Description)</th>
                <th>@Html.DisplayFor(model => item.Date)</th>
                <th>@Html.DisplayFor(model => item.Status)</th>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Atualizar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>